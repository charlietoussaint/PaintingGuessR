{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<body class="homeMain">

		<h2 class="titleConnect">Se connecter</h2>

		<div class="containForm">

			<form action="{{ path('app_login') }}" method="post">
				<div class="form-group">
					<label for="username" class="text-white formText">Email :</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control formText">
				</div>

				<div class="form-group mt-2">
					<label for="password" class="text-white formText">Mot de passe :</label>
					<input type="password" id="password" name="_password" class="form-control formText">
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<input type="hidden" name="_target_path" value="/login/redirect">

				<div class="containFormBtn">

					<button type="submit" class="mt-4 btnForm">Se connecter</button>
				</div>
			</form>

		</div>

	</body>

{% endblock %}
